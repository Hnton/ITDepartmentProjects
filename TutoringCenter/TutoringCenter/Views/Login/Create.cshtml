                        @Html.DropDownListFor(model => model.Subject, new SelectList(new string[] { "Math", "English", "Nursing", "Computer Science", "College 101", "Psychology", "History", "Accounting", "Sociology", "Business", "Criminal Justice", "English (Major)", "Legal Studies", "OTHER" }), htmlAttributes: new { @class = "form-control" })
                    *@
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">

                @Html.LabelFor(model => model.CheckedIn, htmlAttributes: new { @class = "control-label col-md-2" })
