@model TutoringCenter.Models.Login
@{
    ViewBag.Title = "Check In";
}

<script>

    $(document).ready(function () {

        $("#ReasonIDs").multiSelect();
        $("#SubjectIDs").multiSelect();

    })
</script>

@*<h2>Create</h2>*@
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <style>
                .Submit_Button {
                    background: rgb(28, 184, 65);
                    color: white;
                    border-radius: 20px;
                    padding-left: 50px;
                    padding-right: 50px;
                    padding-bottom: 15px;
                    padding-top: 15px;
                    font-size: 14pt;                    
                }

                    .Submit_Button:hover {
                        background-color: #808080;
                        color: white;
                    }

                input[type=number]::-webkit-inner-spin-button,
                input[type=number]::-webkit-outer-spin-button {
                    -webkit-appearance: none;
                    margin: 0;
                }
            </style>
            @*
                <h4>Login @ViewBag.data</h4>
            *@

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div style="margin-left:auto;margin-right:auto;border-radius:20px;max-width:650px;border-color:white;background-color:white;
                padding-left:20px;padding-right:20px;padding-bottom:20px;padding-top:0;
                border:solid;border-width:2px;border-color:lightgray;box-shadow: 8px 8px 6px #888888 ;">

                <table width="100%">
                    <tbody>
                        <tr>
                            <td width="75%">
                                <span style="font-size:32pt;">Welcome to the </span><br><span style="font-size:18pt;">Riverhawk Resource &amp; Tutoring Center</span>
                            </td>
                            <td width="25%">
                                <img src="~/Content/Images/Ricky.jpg" style="width:150px">
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-group" style="display:none">

                    @Html.LabelFor(model => model.CheckedIn, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.CheckedIn, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now } })
                        @Html.ValidationMessageFor(model => model.CheckedIn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="display:none">

                    @Html.LabelFor(model => model.Student.StudentID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Student.StudentID, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.data } })
                        @Html.ValidationMessageFor(model => model.Student.StudentID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.ReasonIDs, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.ListBoxFor(model => model.ReasonIDs, ViewBag.Reasons as MultiSelectList, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.data } })
                        @Html.ValidationMessageFor(model => model.Reasons, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.SubjectIDs, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12" style="text-align:center;">
                        @Html.ListBoxFor(model => model.SubjectIDs, ViewBag.Subjects as MultiSelectList, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.data } })
                        @Html.ValidationMessageFor(model => model.Subjects, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="text-align:center;">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Check In" class="Submit_Button" />
                    </div>
                </div>
            </div>
        </div>
        <br />
    }

    @*Not sure why this is here, commenting out.
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    *@
</body>

<script src="~/Scripts/jquery.multi-select.js" type="text/javascript"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
